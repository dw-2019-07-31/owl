<p id="notice"><%= notice %></p>

<h1>Confirms</h1>

<table>
  <thead>
    <tr>
      <th>Houhou</th>
      <th>Houhou eng</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @confirms.each do |confirm| %>
      <tr>
        <td><%= confirm.houhou %></td>
        <td><%= confirm.houhou_eng %></td>
        <td><%= link_to 'Show', confirm %></td>
        <td><%= link_to 'Edit', edit_confirm_path(confirm) %></td>
        <td><%= link_to 'Destroy', confirm, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Confirm', new_confirm_path %>
